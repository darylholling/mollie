{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ product.omschrijving }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ product.prijs }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td><img src="{{ asset('images/products/' ~ product.imageName) }}" alt="images" width="400px"></td>
            </tr>
            {#<tr>#}
                {#<th>UpdatedAt</th>#}
                {#<td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
            {#</tr>#}
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
