{% extends 'base.html.twig' %}

{% block body %}

    <h1>SHOPPING-CART</h1>

    <ul class="thumbnails">


    {% set cart = app.session.get('cart') %}
    {% set total = 0 %}
    {% set count = 0 %}

    {% if cart is empty %}
        <h5>Your shopping cart is empty.</h5>
    {% else %}

        {% if product %}
            <div class="row">
                <div class="col-md-10">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Aantal</th>
                            <th>Afbeelding</th>
                            <th>Prijs</th>
                            <th>Totaal</th>
                            <th>Add</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for key, item in cart %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ item }}</td>
                                {% for row in product %}
                                    {% if row.id == key %}
                                        <td><img src="{{ asset('images/products/' ~ row.imageName) }}" alt="images" width="80px"></td>
                                        <td>€{{ row.prijs | number_format(2) }}</td>
                                        <td>€{{ (row.prijs * item) | number_format(2) }}</td>
                                        {% set total = total + (row.prijs * item) %}
                                    {% endif %}
                                {% endfor %}
                                <td><a href="{{ path('cart_add', {'id': key}) }}">
                                        <button class="btn btn-success">Add</button>
                                    </a></td>
                                <td><a href="{{ path('cart_remove', {'id': key}) }}">
                                        <button class="btn btn-danger">Remove</button>
                                    </a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
        </ul>
        <h4 class="right">Total in Cart = €{{ total | number_format(2) }}</h4>
    {% endif %}
    <a href="{{ path('product_overview') }}">
        <button type="button" class="btn btn-info col-lg-2 right">Go on shopping!</button>
    </a>
    {% if cart is not empty %}
        <a href="{{ path('checkout') }}">
            <button type="button" class="btn btn-success col-lg-2">Checkout!</button>
        </a>
    {% endif %}
{% endblock %}