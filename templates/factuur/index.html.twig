{% extends 'base.html.twig' %}

{% block title %}Factuur index{% endblock %}

{% block body %}
    <div class="container">
        {% if not factuurs %}
            <h1>Geen facturen</h1>
        {% else %}
            <h1 class="text-center">Facturen overzicht</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Timestamp</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for factuur in factuurs %}
                    <tr>
                        <td>{{ factuur.id }}</td>
                        <td>{{ factuur.timestamp ? factuur.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('factuur_show', {'id': factuur.id}) }}" class="btn btn-info">show</a>
                            <a href="{{ path('factuur_edit', {'id': factuur.id}) }}" class="btn btn-primary">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

        {#<a href="{{ path('factuur_new') }}" class="btn btn-success">Create new</a>#}
    </div>
{% endblock %}
